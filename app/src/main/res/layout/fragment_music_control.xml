<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.hazardous.musicplayer.fragments.MusicControlFragment">

    <!-- TODO: Update blank fragment layout -->

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_gravity="center_horizontal|top"
        android:indeterminate="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playButtonFragment"
        android:layout_gravity="left|top"
        android:src="@mipmap/ic_play_arrow_black"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/playButtonFragment"
        android:padding="4dp"
        style="@style/Widget.AppCompat.ActionButton.Overflow"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@mipmap/ic_skip_previous_black"
        android:padding="4dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.ActionButton.Overflow"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/playButtonFragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:src="@mipmap/ic_skip_next_black"
        style="@style/Widget.AppCompat.ActionButton.Overflow"/>
</RelativeLayout>
