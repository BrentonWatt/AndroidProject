<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listAlbumArtView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_warning_black"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/unknown_artist"
        android:id="@+id/list_songTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/listAlbumArtView"
        android:layout_toEndOf="@+id/listAlbumArtView"
        tools:text="Title"
        android:textColor="#000000"
        android:textSize="18sp"
        style="@android:style/TextAppearance.DialogWindowTitle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="@string/unknown_song"
        android:id="@+id/list_songArtist"
        android:layout_below="@+id/list_songTitle"
        android:layout_toRightOf="@+id/listAlbumArtView"
        android:layout_toEndOf="@+id/listAlbumArtView"
        tools:text="Song"
        android:textColor="#000000"/>
</RelativeLayout>